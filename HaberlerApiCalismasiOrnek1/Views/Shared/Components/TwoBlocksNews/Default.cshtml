@model List<HaberContent>
<div class="col-lg-8">
    <div class="row">
        <div class="col-12">
            <div class="section-title">
                <h4 class="m-0 text-uppercase font-weight-bold">Haberler</h4>
                <a class="text-secondary font-weight-medium text-decoration-none" href="">Tümünü Gör</a>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="position-relative mb-3">
                    <img class="w-100" src="@item.Image" alt="@item.Title" style="object-fit: cover;" width="365" height="205">
                    <div class="bg-white border border-top-0 p-4">
                        <div class="mb-2">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2" title="@item.Title" asp-controller="HaberDetay" asp-action="Index" asp-route-id="@item.Id">@item.Source</a>
                            <a class="text-body"  title="@item.Title" asp-controller="HaberDetay" asp-action="Index" asp-route-id="@item.Id"><small>@item.NewsDate</small></a>
                        </div>
                        <a style="cursor: pointer;" class="d-block mb-3 text-secondary font-weight-bold" title="@item.Title" asp-controller="HaberDetay" asp-action="Index" asp-route-id="@item.Id">
                            @if (@item.Title.Length <= 80)
                            {
                                @item.Title
                            }
                            else
                            {
                                @item.Title.Substring(0, 80)
                                <span>...</span>
                            }
                        </a>
                       @*  <p class="m-0">
                            @if (@item.Description.Length>=50)
                            {
                                @item.Description  <span> ... </span>  <a style="cursor: pointer;" class="d-block mb-3 font-weight-bold" title="@item.Title" asp-controller="HaberDetay" asp-action="Index" asp-route-id="@item.Id">Devamını Oku</a>
                            }
                            else
                            {
                                <span> </span>
                            }
                        </p> *@
                    </div>
                </div>
            </div>
        }
    </div>
    @*@Html.PagedListPager((IPagedList)Model,page=> Url.Action("Index",new {page}))*@
</div>