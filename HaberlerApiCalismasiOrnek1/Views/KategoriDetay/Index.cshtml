            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h4 class="m-0 text-uppercase font-weight-bold">Haber Kanalı: @Model.OneNEws.Source</h4>
                            <a class="text-secondary font-weight-medium text-decoration-none" title="Anasayfa" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </div>
                    </div>

                    @foreach (var item in Model.NewsList)
                    {
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <img class="img-fluid w-100" src="@item.Image" style="object-fit: cover;">
                                <div class="bg-white border border-top-0 p-4">
                                    <div class="mb-2">
                                        <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2" target="_blank" title="@item.Title" href="@item.Url">@item.Source</a>
                                        <a class="text-body" title="@item.NewsDate" href="@item.Url" target="_blank"><small>@item.NewsDate</small></a>
                                    </div>
                                    <a class="h4 d-block mb-3 text-secondary text-uppercase font-weight-bold" target="_blank" title="@item.Title" href="@item.Url">
                                        @item.Title.Substring(0,20)
                                    </a>
                                    <p class="m-0">@item.Description.Substring(0, 40)</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

