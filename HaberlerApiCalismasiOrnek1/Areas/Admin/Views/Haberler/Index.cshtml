@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<HaberContent>
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Haber Listesi</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Haberler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>NewsDate</th>
                            <th>Source</th>
                            <th>Url</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td>Id</td>
                            <td>Title</td>
                            <td>Description</td>
                            <td>Image</td>
                            <td>NewsDate</td>
                            <td>Source</td>
                            <td>Url</td>
                            <td>İşlemler</td>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.Id))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if (@item.Title.Length > 100)
                                    {
                                        @item.Title.Substring(0, 100)
                                    }
                                    else
                                    {
                                        @item.Title
                                    }
                                </td>
                                <td>
                                    @if (@item.Description.Length > 100)
                                    {
                                        @item.Description.Substring(0, 100)
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                </td>
                                <td>
                                    <img src="@item.Image" alt="@item.Title" width="100" height="100" />
                                </td>
                                <td>@item.NewsDate</td>
                                <td>@item.Source</td>
                                <td>@item.Url</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Haberler" asp-action="UpdateForm" asp-route-id="@item.Id" class="btn btn-block btn-warning btn-flat">Güncelle</a>
                                    <a asp-area="Admin" asp-controller="Haberler" asp-action="DeleteForm" asp-route-id="@item.Id" class="btn btn-block btn-danger btn-flat">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
