@model UserRegisterViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Haberler API Admin Panel</title>
    <link href="~/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            @* <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> *@
                            <div class=""></div>
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Haberler API Admin Panel Kayıt Ol</h1>
                                    </div>
                                    @*<form class="user" asp-action="SignUp" asp-controller="Login" method="post" asp-area="Admin"> *@
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="text" asp-for="Name" class="form-control" placeholder="Ad" required="">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyad" required="">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" required="">
                                            <span class="text-danger" asp-validation-for="Username"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" asp-for="Mail" class="form-control" placeholder="Email" required="">
                                            <span class="text-danger" asp-validation-for="Mail"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required="">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" required="">
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Kayıt Ol</button>
                                    </form>
                                    <hr>
                                    <br/>
                                    <p class="text-muted text-center"><small>Hesabınız var ise </small></p>
                                    <a class="btn btn-block btn-danger" asp-area="Admin" asp-controller="Login" asp-action="SignIn">Giriş Yap</a>
                                    <br />
                                    <p> <a asp-area="" asp-controller="Home" asp-action="Index" target="_blank" class="btn btn-block btn-warning">Site Ön yüzüne Gitmek İçin Tıklayınız</a>  </p>
                                    <p class="text-muted text-center"> <small>Haberler API @DateTime.Now</small> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Admin/js/sb-admin-2.min.js"></script>
</body>
</html>
